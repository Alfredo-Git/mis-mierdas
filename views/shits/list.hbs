<div class="content">
  <div class="row">
    <h1>Todas mis mierdas</h1>
  </div>

  <ul>
    {{#each mierdas as |mierda| }}
    <li>
      <div class="box">
        <div class="zoom-nail">
          {{get_video_stream mierda}}
          {{!-- {{#if mierda.youtube }}
            <iframe width="560" height="315" src="https://www.youtube.com/embed/{{mierda.videoId}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          {{else if mierda.vimeo }}
          <iframe src="https://player.vimeo.com/video/{{mierda.videoId}}" width="640" height="360" frameborder="0"></iframe>
          {{else if mierda.thumbnail }}
            <img src="{{mierda.thumbnail}}" alt="">
          {{/if}} --}}
        </div>
        <div class="icons">
          {{!-- Esto no debe ser un formulario, porque usas axios --}}
          <i class="fas fa-star favorite"></i><div class="favorite-Id">{{mierda.id}}</div>

            {{!-- <form action="/shits/{{mierda.id}}/favorite" method="post">
              <button type="submit"><i class="fas fa-star{{#if mierda.favorite}} favorite {{/if}}"></i></button>
            </form>  --}}
            {{!-- --------- --}}
            <i class="fas fa-pencil-alt"></i>
          <form action="/shits/{{mierda.id}}/delete" method="post">
            <button type="submit"><i class="fas fa-trash-alt"></i></button>
          </form> 
          <a href="{{mierda.url}}" target="_blank"><i class="fas fa-link"></i></a>
        </div>
      </div>
      <div class="box-info-content">
        <div class="box-info">
          <h2>{{mierda.name}}</h2>
          <form action="/shits/{{mierda.id}}/update" method="post">
            <input type="text" name="name" placeholder="{{mierda.name}}">
            <button class="btn btn-send" type="submit"><i class="fas fa-pencil-alt"></i> update</button>
            <i class="fas fa-times close"></i>
          </form>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>
</div>
