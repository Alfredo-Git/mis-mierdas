<div class="content">
  <div class="row">
    <h1>Todas mis mierdas</h1>
  </div>

  <ul>
    {{#each mierdas as |mierda| }}
    <li>
      <div class="box">
        <div class="zoom-nail">
          {{#if mierda.video}}
          <iframe width="560" height="315" src="https://www.youtube.com/embed/gl2pNvHgRGI" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          {{/if}}
        </div>
        <div class="icons">
          <form action="/user/mis-mierdas/{{mierda.id}}/delete" method="post">
            <button type="submit"><i class="fas fa-trash-alt"></i></button>
          </form> 
          <a href="{{mierda.url}}" target="_blank"><i class="fas fa-link"></i></a>
        </div>
      </div>
      <h2>{{mierda.name}}</h2>
    </li>
    {{/each}}
  </ul>
</div>
